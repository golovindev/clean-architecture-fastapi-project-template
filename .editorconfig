# This is the top-most .editorconfig file
root = true

# All Files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Python Files
[*.py]
max_line_length = 88
indent_size = 4

# Configuration files (JSON, YAML, TOML, INI)
[*.{json,yaml,yml,toml,ini}]
indent_size = 2

# Markdown Files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell Scripts
[*.sh]
indent_size = 2

# SQL Files
[*.sql]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# Git files
[.git*]
indent_size = unset
indent_style = unset
trim_trailing_whitespace = unset
insert_final_newline = unset

# Editor-specific files
[*.{vscode,sublime-project,sublime-workspace}]
indent_size = unset
indent_style = unset
trim_trailing_whitespace = unset
insert_final_newline = unset
